<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical"
    tools:context="com.example.ethan.studying.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="420dp"
        app:layout_constraintBottom_toTopOf="@+id/supportButton"
        app:layout_constraintEnd_toStartOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/studylogo" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginEnd="114dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Search for groups..."
        android:textColor="#303030"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/roundedbutton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="My Profile"
        android:textColor="#303030"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/groupButton"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/roundedbutton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="My Groups"
        android:textColor="#303030"
        app:layout_constraintBottom_toBottomOf="@+id/accountButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileButton" />

    <Button
        android:id="@+id/accountButton"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:background="@drawable/roundedbutton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="My Account"
        android:textColor="#303030"
        app:layout_constraintBottom_toTopOf="@+id/aboutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/supportButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/roundedbutton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Support"
        android:textColor="#303030"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aboutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:background="@drawable/roundedbutton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="About Us"
        android:textColor="#303030"
        app:layout_constraintBaseline_toBaselineOf="@+id/supportButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/supportButton" />


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#696969"
    android:layout_margin="5dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/member_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:cropToPadding="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/memberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/member_profile_image"
        android:text="Michael"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/memberStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memberName"
        android:layout_toRightOf="@+id/member_profile_image"
        android:text="Group Leader"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/deleteMember"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@+id/addFriend"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/addFriend"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_add" />

</RelativeLayout>